                  <input name="familiar[cellphone]"  maxlength="12" placeholder="Fijo/celular" type="text">
                </div>

            </div>
            <div class="four fields">
                <div class="field">
                  <input type="hidden" name="familiar[blind_id]" value="<%=@blind.id%>" >
