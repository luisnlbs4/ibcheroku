<script type="text/javascript">
    $(document).on('ready', function () {
        $('.ui.accordion').accordion();
        $('.ui.checkbox').checkbox();
    });
</script>
<%if current_user.has_role? :Administrador or current_user.has_role? :Modificador %>
<%= form_for(@publication) do |f| %>

  <% if @publication.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@publication.errors.count, "error") %>:</h2>

      <ul>
      <% @publication.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="ui form container ">
    <div class="ui   segment">
      <div class="ui header">
          Formulario de Publicaciones
      </div>
      <div class="ui divider"> </div>
        <div class="field">
          <%= f.label :"ruta de la imagen" %>
          <%= f.text_field :image_path%>
        </div>

        <div class="field">
          <%= f.label :titulo %>
          <%= f.text_field :title%>
        </div>
        <div class="field">
          <%= f.label :description %>
          <%= f.text_area :description %>
        </div>
        <div class="two fields">
          <div class="field">
            <%= f.label :initialDate %>
            <%= f.date_field :initialDate %>
          </div>
          <div class="field">
            <%= f.label :finalDate %>
            <%= f.date_field :finalDate %>
          </div>
        </div>
        <div class="inline field">
        <div class="ui toggle checkbox">
          <%= f.check_box :showP %>
          <%= f.label :Activo %>
        </div>
      </div>
        <div class="ui center aligned basic segment">
        <div class="actions">
          <%= f.submit "Guardar",class:"ui green fluid button" %>
        </div>
    </div>
  </div>
</div>
<% end %>
<%else%>
     <div class="ui segment">
      <h1>No deberias estar aqui</h1>
      </div>
<%end%>
